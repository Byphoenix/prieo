<h2 class="ui top attached header">新增商品</h2>
<div class="ui attached segment">

  <div class="ui attached segment">
    <p><div class="ui form">
    <%= form_for @product,url: {action:'create',controller:'admin/products',:id=>@product.id } do |f| %>
        <% if @product.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

              <ul>
                <% @product.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>




        <div class="field">
          <%= f.label :商品名称 %><br>
          <%= f.text_field :title %>
        </div>

        <%= f.hidden_field :id,:value=>@product.id %>

        <div class="field">
          <%= f.label :商品描述 %><br>
          <%= f.text_area :description,:size=>'40x5'%>
        </div>
        <div class="field">
          <%= f.label :设计师 %><br>
          <%= f.text_field :designer %>
        </div>
        <div class="field">
          <%= f.label :上传图片文件 %><br>
          <%= f.text_field :image_url %>
        </div>
        <div class="field">
          <%= f.label :商品价格 %><br>
          <%= f.text_field :price %>
        </div>
        <div class="actions">
          <button class="red ui button" type="submit">确认添加</button>
        </div>
    <% end %>
  </div></p>
  </div>
</div>
<br />

<%= link_to '返回', admin_products_path,class:'compact ui button'%>
<br /><br />
